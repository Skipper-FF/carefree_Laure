<div class="dashboard-container">
  <div class="container-dashboard">
    <div class="dashboard-action">
      <h1>Hello <%= current_user.first_name %>! ðŸ™‚</h1>

      <div class="card-dashboard">
        <div class="card-category-dashboard">
          <p> <%= current_user.labours.count %> </p>
        </div>

        <div class="card-category-dashboard">
          <p> <%= current_user.email %> </p>
        </div>

        <div class="card-category-dashboard">
          <p> <%= current_user.email %>  </p>
        </div>
      </div>

        <div class="buttons">
          <%= link_to(dashboard_path) do %>
            <button type="button" class="button-action">
              <i class="fas fa-user-plus fa-3x"></i>
              <p> Admission </p>
            </button>
          <%end%>

          <%= link_to(dashboard_path) do %>
            <button type="button" class="button-action">
              <i class="fas fa-stethoscope fa-3x"></i>
              <p> Consultation </p>
            </button>
          <%end%>

          <button type="button" class="button-action">
             <% if params[:category] %>
                <%= link_to dashboard_path do %>
                  <i class="fas fa-baby fa-3x"></i>
                  <p> Naissance </p>
                <% end %>
            <% else %>
                <%= link_to dashboard_path(category: "Naissance")  do %>
                  <i class="fas fa-baby fa-3x"></i>
                  <p> Naissance </p>
                <% end %>
            <% end %>
          </button>

          <%= link_to(dashboard_path) do %>
            <button type="button" class="button-action">
              <i class="fas fa-clinic-medical fa-3x"></i>
              <p> Hospitalisation </p>
            </button>
          <%end%>

          <%= link_to(dashboard_path) do %>
            <button type="button" class="button-action">
              <i class="fas fa-prescription-bottle-alt fa-3x"></i>
              <p> Ordonnance </p>
            </button>
          <%end%>

          <%= link_to(dashboard_path) do %>
            <button type="button" class="button-action">
              <i class="fas fa-print fa-3x"></i>
              <p> Impression </p>
            </button>
          <%end%>
        </div>
      </div>
    </div>

  <div class="search-window <%= 'appear' if params[:category] %>">  
    <%= simple_form_for :search, url: dashboard_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Recherche"/>
        <button name="button" type="submit" class="btn btn-flat" >
          <i class="fas fa-search"></i> </button>
      </div>
    <% end %>
    <% @patients.each do |patient| %>
      <div class="cards-window">
        <%= link_to new_labour_path(patient_id:patient.id, category:params[:category]) do %>
        <div class="card-patient-window">
          <div class="card-title-window">
            <h3>
              <%= patient.first_name %>
              <%= patient.last_name %>
            </h3>
          </div>
              <ul>
                <li><%= patient.age %> ans</li>
                <li><%= patient.birth_date %></li>
                <li><%= patient.nss %></li>
                <li><%= patient.description %></li>
                <li><%= patient.number_of_weeks %> semaines</li>
              </ul>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

